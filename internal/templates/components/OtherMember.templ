package components

import (
  "example.com/phoenix-the-band/internal/model"
)

templ OtherMember(data model.Member) {
  <!-- Member Component -->

  <div class="bg-white p-8 rounded-lg shadow-md hover:shadow-xl transition text-center">
    <div class="mb-4">
      <img src={ templ.URL(data.Image) } alt="" class="mx-auto">
    </div>

    <h2 class="text-xl font-bold">{ data.Name }</h2>
    <h3 class="mb-2">{ data.Role }</h3>
    <p class="text-gray-700">{ data.Description }</p>
  </div>
}